    // fUNCTION 
  
    @FXML void actionCopy(ActionEvent event) {
    	String hex2 = "#" + Integer.toHexString(codepicker.getValue().hashCode()); 
   	 Clipboard clipboard = Clipboard.getSystemClipboard();
   	 ClipboardContent content = new ClipboardContent();
   	 content.putString(hex2);
   	 clipboard.setContent(content);
    }
    @FXML void actionCopyrgb(ActionEvent event) {
    	 Clipboard clipboard = Clipboard.getSystemClipboard();
       	 ClipboardContent content = new ClipboardContent();
       	 content.putString(showrgbcode.getText());
       	 clipboard.setContent(content);

    }
   
    @FXML void actioncolor(ActionEvent event) {
    	String hex2 = "#" + Integer.toHexString(codepicker.getValue().hashCode()); 
       	
      	 getcodepicger.setText(hex2);
         showcolor.setFill(codepicker.getValue());
         Color getrGB = codepicker.getValue();
         showrgbcode.setText("(" + (int)(getrGB.getRed()*255)+","+(int)(getrGB.getGreen()*255)+","+(int)(getrGB.getBlue()*255)+")");
         rgbRed.setValue((int)(getrGB.getRed()*255));
         rgbgreen.setValue((int)(getrGB.getGreen()*255));
         rgbBlue.setValue((int)(getrGB.getBlue()*255));
         
    }
    @FXML
    void actionsliderRed(MouseEvent event) {
    	showcolor1.setFill(Color.rgb((int)rgbRed.getValue(),(int)rgbgreen.getValue() ,(int)rgbBlue.getValue()));
    	showrgbcode.setText("(" +(int)rgbRed.getValue()+","+(int)rgbgreen.getValue()+","+(int)rgbBlue.getValue()+")");
        
    }


