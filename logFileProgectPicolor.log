public class getpicker {

    @FXML private AnchorPane Panecolorpicker;
    @FXML private JFXTextField getcodepicger;
    @FXML private JFXColorPicker codepicker;
    @FXML private Circle showcolor;
    @FXML private JFXButton btncopy;
    @FXML private JFXSlider rgbRed;
    @FXML private JFXSlider rgbgreen;
    @FXML private JFXSlider rgbBlue;
    @FXML private Label showrgbcode;
    @FXML private JFXButton btncopyrgb;
    
    @FXML
    private Circle showcolor1;
   

   

    @FXML
